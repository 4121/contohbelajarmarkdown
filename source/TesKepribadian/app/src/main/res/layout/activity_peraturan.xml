<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Petunjuk"
                android:id="@+id/textView2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anda harus memilih jawaban untuk setiap pertanyaan. Ada kemungkinan bahwa keduanya sangat mendeskripsikan anda, tetapi pilihlah salah satu yang lebih anda sukai."
                android:id="@+id/textView3"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan dari tes ini adalah untuk menemukan kecenderungan alami anda. Mohon tidak memikirkan tentang situasi anda, teman, keluarga, rekan kerja dan sebagainya. Pilihan yang ada tidak lebih baik atau lebih buruk, setiap tipe memiliki kelebihan dan kekurangannya"
                android:id="@+id/textView4"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Mulai"
                android:id="@+id/btnMulai"
                android:layout_marginTop="90dp"
                android:layout_alignParentTop = "true" />

            </LinearLayout>

        </ScrollView>



</LinearLayout>
